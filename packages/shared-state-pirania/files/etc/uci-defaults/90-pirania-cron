#!/bin/sh

unique_append()
{
	[ -f "$2" ] && grep -qF "$1" "$2" || echo "$1" >> "$2"
}

unique_append \
	'*/2 * * * * ((sleep $(($(hexdump -n 2 -e \"%u\" /dev/urandom) % 30)); /etc/shared-state/publishers/shared-state-publish_vouchers && shared-state sync pirania-vouchers &> /dev/null)&)'\
	/etc/crontabs/root

exit 0
