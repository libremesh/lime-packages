echo "Content-Type: application/json"
echo

[ "$REQUEST_METHOD" != "POST" ] && exit 22
[ -z "$PATH_INFO" ] && exit 22
echo "$PATH_INFO" | grep -q '^[a-zA-Z0-9_-]*$' || exit 22

cat - | shared-state reqsync "$PATH_INFO"
