#!/bin/sh

uci set bmx7.sms='plugin'
uci set bmx7.sms.plugin='bmx7_sms.so'
uci set bmx7.lime_defaults='syncSms'
uci set bmx7.lime_defaults.syncSms='lime-defaults'
uci commit bmx7
/etc/init.d/bmx7 reload

mkdir -p /var/run/bmx7/sms/sendSms/
ln -s /etc/config/lime-defaults /var/run/bmx7/sms/sendSms/lime-defaults
