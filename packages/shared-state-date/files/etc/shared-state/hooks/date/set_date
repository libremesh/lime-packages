mCandDate="$(cat - | jsonfilter -e '$.date.data')"
mCandDateS="$(date --utc +%s "$mCandDate")"
mCurrDateS="$(date --utc +%s)"
mDiffS="$(($mCandDateS-$mCurrDateS))"

[ "${mDiffS}" -lt "600" ] && exit 0

((
ntpd -w -q -p ::1 || {
	date --utc --set "$mCandDate"
	[ "${mDiffS#-}" -gt "1200" ] &&
		for pub in /etc/shared-state/publishers/* ; do
			[ -x "$pub" ] && "$pub";
		done
}
)&)
