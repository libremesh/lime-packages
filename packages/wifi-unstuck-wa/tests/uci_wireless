config wifi-device 'radio0'
	option type 'mac80211'
	option channel '11'
	option hwmode '11g'
	option path 'platform/qca955x_wmac'
	option htmode 'HT20'
	option disabled '0'
	option distance '100'
	option noscan '1'

config wifi-device 'radio1'
	option type 'mac80211'
	option hwmode '11a'
	option path 'pci0000:00/0000:00:00.0'
	option disabled '0'
	option distance '1000'
	option noscan '1'
	option channel '48'
	option htmode 'HT40'

config wifi-device 'radio2'
	option type 'mac80211'
	option hwmode '11a'
	option path 'pci0000:01/0000:01:00.0'
	option disabled '0'
	option distance '1000'
	option noscan '1'
	option channel '157'
	option htmode 'HT40'

config wifi-iface 'lm_wlan0_ap_radio0'
	option mode 'ap'
	option device 'radio0'
	option ifname 'wlan0-ap'
	option distance '100'
	option ssid 'LibreMesh.org'
	option network 'lan'

config wifi-iface 'lm_wlan0_apname_radio0'
	option mode 'ap'
	option device 'radio0'
	option ifname 'wlan0-apname'
	option distance '100'
	option ssid 'LibreMesh.org/LiMe-8851a5'
	option network 'lan'

config wifi-iface 'lm_wlan1_mesh_radio1'
	option mode 'mesh'
	option device 'radio1'
	option ifname 'wlan1-mesh'
	option network 'lm_net_wlan1_mesh'
	option distance '1000'
	option mesh_fwding '0'
	option mesh_id 'LiMe'

config wifi-iface 'lm_wlan2_mesh_radio2'
	option mode 'mesh'
	option device 'radio2'
	option ifname 'wlan2-mesh'
	option network 'lm_net_wlan2_mesh'
	option distance '1000'
	option mesh_fwding '0'
	option mesh_id 'LiMe'
